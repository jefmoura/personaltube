<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AmazonS3Upload</servlet-name>
        <servlet-class>servlet.AmazonS3Upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ZencoderEncode</servlet-name>
        <servlet-class>servlet.ZencoderEncode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletIndex</servlet-name>
        <servlet-class>servlet.ServletIndex</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMediaPlayer</servlet-name>
        <servlet-class>servlet.ServletMediaPlayer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AmazonS3Upload</servlet-name>
        <url-pattern>/AmazonS3Upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ZencoderEncode</servlet-name>
        <url-pattern>/ZencoderEncode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletIndex</servlet-name>
        <url-pattern>/ServletIndex</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMediaPlayer</servlet-name>
        <url-pattern>/ServletMediaPlayer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
